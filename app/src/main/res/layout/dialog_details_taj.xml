<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_details_taj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pilgubjateng.battistrada.pilgubjateng.Calon">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nama_paslon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Calon Wakil Gubernur"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_paslon"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/taj"
                    android:layout_gravity="center"
                    />

                <RelativeLayout
                    android:id="@+id/relative_cagub"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_biografi_detail">

                    <TextView
                        android:id="@+id/tv_biografi_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Biografi"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        />

                    <ImageView
                        android:id="@+id/icon_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_biografi_detail"
                        app:srcCompat="@drawable/ic_person_black_24dp"
                        android:layout_marginRight="8dp"
                        />

                    <TextView
                        android:id="@+id/txt_profil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_biografi_detail"
                        android:layout_toRightOf="@id/icon_person"
                        android:text="Profil"
                        android:layout_marginBottom="8dp"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/txt_profil"
                        android:layout_toRightOf="@id/icon_person"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_nama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="@string/taj"/>

                        <TextView
                            android:id="@+id/txt_ttLahir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tempat Lahir"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="@string/ttl_taj"/>

                        <TextView
                            android:id="@+id/tx_agama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agama"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="@string/agama_taj"/>

                        <TextView
                            android:id="@+id/txt_pendidikan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendidikan Terakhir"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryDark"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="@string/pendidikan_taj"/>

                        <TextView
                            android:id="@+id/txt_track_record"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rekam Jejak"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryDark"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="@string/track_record_taj"/>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/relative_cagub">

                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source : inibiodata"
                android:layout_gravity="bottom|right"
                android:textStyle="italic"/>
        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>